!!! XML
!!! Strict
%html{ html_attrs }
  %head
    %title= title

    %meta{ 'http-equiv'=> 'Content-type', :content => 'text/html;charset=UTF-8' }

    %script{ :src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js', :type => 'text/javascript' }
    %script{ :src => '/js/jquery.lightbox-0.5.min.js', :type => 'text/javascript' }
    %script{ :src => '/js/jquery.ba-bbq.min.js', :type => 'text/javascript' }
    %script{ :src => '/js/blog.js', :type => 'text/javascript' }

    - if settings.environment == :development
      :javascript
        var disqus_developer = 1;
        var disqus_url = '#{settings.blog_url}#{request.path}';

    - [:reset, :layout, :fonts, :colors, :lightbox, 'themes/twilight'].each do |css|
      %link{ css_attrs(css) }

    - if @tag or @search
      %link{ :rel => 'alternate', :type => 'application/rss+xml', :title => settings.blog_name, :href => '/feed/' }
    %link{ :rel => 'alternate', :type => 'application/rss+xml', :title => title, :href => feed_url }
    %link{ :rel => 'icon', :type => 'image/png', :href => '/images/icon.png' }
  %body
    #page
      %h1
        %a{ :href => '/' }= settings.blog_name
      #content
        = yield
      #tag_cloud
        %h4 Tags
        %p
          - @tags.each do |tag, amount|
            %a{ :class => class_for_tag(tag), :href => tag_url(tag) }= tag
      %a#feed_link.rss{ :href => feed_url, :title => title } RSS
      #validation
        %a{ :href => 'http://validator.w3.org/check?uri=referer' }
          %img{ :src => 'http://www.w3.org/Icons/valid-xhtml10', :alt => 'Valid XHTML 1.0 Strict', :height => '31', :width => '88' }

