!!!
%html
  %head
    %title= title
    %script{ :src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js', :type => 'text/javascript' }
    %script{ :src => '/scripts/jquery.lightbox-0.5.min.js', :type => 'text/javascript' }
    %script{ :src => '/scripts/jquery.ba-bbq.min.js', :type => 'text/javascript' }
    %script{ :type => 'text/javascript' }
      - if settings.environment == :development
        var disqus_developer = 1;
        var disqus_url = '#{BLOG_URL}#{request.path}';
    %script{ :src => '/scripts/blog.js', :type => 'text/javascript' }
    = stylesheet [:reset, :layout, :fonts, :tags, :lightbox]
    - if @tag
      %link{ :rel => 'alternate', :type => 'application/rss+xml', :title => "#{BLOG_NAME} posts tagged with #{@tag}", :href => "#{BLOG_URL}/tags/#{@tag}/feed/" }
    - else
      %link{ :rel => 'alternate', :type => 'application/rss+xml', :title => BLOG_NAME, :href => "#{BLOG_URL}/feed/" }
  %body
    #page
      %h1
        %a{ :href => '/' }= BLOG_NAME
      #content
        = yield
      #tag_cloud
        %h4 Tags
        %ul.tags
          - @tags.each do |tag, amount|
            %li{ :class => class_for_tag(tag) }
              %a{ :href => tag_url(tag) }= tag

